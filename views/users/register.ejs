<% layout("layouts/boilerplate") %>
<div class="col-6 offset-3">
  <h1>Register</h1>
  <form action="/register" method="POST" novalidate class="needs-validation">
    <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input
        class="form-control"
        type="text"
        id="username"
        name="username"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="email">Email</label>
      <input
        class="form-control"
        type="email"
        id="email"
        name="email"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="password">Passsword</label>
      <input
        class="form-control"
        type="password"
        id="password"
        name="password"
        required
      />
    </div>
    <button class="btn btn-success">Register</button>
  </form>
</div>
